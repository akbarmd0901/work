<%= render partial: "courses/form_vd" %>

<h1>Courses</h1>  


<% @courses.each do |course| %>

<div class="card">
  <div class="card-body" style="width: 18rem;"> <strong><%= course.name %></strong> <br>
    <p class="card-text"><%= course.discription %></p>
    <p class="card-text"><small class="text-muted"></small></p>
  
  </div>
  <%= image_tag course.image, size: "260x180" if course.image.attached?  %>  <br>
</div>
<%= link_to "show", course, class: "btn btn-outline-primary" %>
<%= link_to "Edit", edit_course_path(course), class: "btn btn-outline-primary" %><br><br>

<% end %>

<%= link_to "New course", new_course_path, class: "btn btn-primary btn-lg disabled" %>    
